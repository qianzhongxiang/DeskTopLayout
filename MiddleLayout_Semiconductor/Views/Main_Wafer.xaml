<UserControl x:Class="MiddleLayout_Semiconductor.Main_Wafer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"         
             xmlns:local="clr-namespace:MiddleLayout_Semiconductor"
             MinHeight="900" MinWidth="1200" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="120"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ContentControl Grid.Column="0" prism:RegionManager.RegionName="SettingRegion" />
        <ContentControl Grid.Column="1" prism:RegionManager.RegionName="ActiveRegion" />
        <ContentControl Grid.Column="2" prism:RegionManager.RegionName="AssistRegion" />
    </Grid>
</UserControl>
